<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AddSubUtils">
        <!--是否可以手动输入-->
        <attr name="editable" format="boolean"></attr>
        <!--输入框的位置-->
        <attr name="location" format="string"></attr>
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="ImageWidth" format="dimension" />
        <!-- 中间EditText的宽度 -->
        <attr name="contentWidth" format="dimension" />
        <!--中间TextView的大小-->
        <attr name="contentTextSize" format="dimension"/>
        <!--中间字体的颜色-->
        <attr name="contentTextColor" format="color"/>
        <!--整个控件的background-->
        <attr name="all_background" format="color|reference"/>
        <!--左面控件的背景-->
        <attr name="leftBackground" format="color|reference"/>
        <!--右面控件的背景-->
        <attr name="rightBackground" format="color|reference"/>
        <!--中间控件的背景-->
        <attr name="contentBackground" format="color|reference"/>
        <!--左面控件的资源-->
        <attr name="leftResources" format="color|reference"/>
        <!--右面控件的资源-->
        <attr name="rightResources" format="color|reference"/>
    </declare-styleable>


    <!--可滚动的图片-->
    <declare-styleable name="MovingImageView">
        <attr name="miv_speed" format="integer"/>
        <attr name="miv_repetitions" format="integer"/>
        <attr name="miv_max_relative_size" format="float"/>
        <attr name="miv_min_relative_offset" format="float"/>
        <attr name="miv_start_delay" format="integer"/>
        <attr name="miv_load_on_create" format="boolean"/>
    </declare-styleable>

    <!-- SimpleButton，简写sb -->
    <declare-styleable name="SimpleButton">
        <!--显示类型-->
        <attr name="sb_mode" format="enum">
            <enum name="normal" value="201"/>
            <enum name="check" value="202"/>
            <enum name="icon_check_invisible" value="203"/>
            <enum name="icon_check_change" value="204"/>
        </attr>
        <!--设置形状-->
        <attr name="sb_shape" format="enum">
            <enum name="round_rect" value="101"/>
            <enum name="arc" value="102"/>
            <enum name="rect" value="103"/>
        </attr>
        <!-- 设置图标的位置，只支持左右两边 3、5 是Gravity里定义的值 -->
        <attr name="sb_gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <!--是否自动切换选中状态，不使能可以灵活地选择切换，通过用于等待网络返回再做切换-->
        <attr name="sb_auto_check" format="boolean"/>
        <!--是否选中-->
        <attr name="sb_checked" format="boolean"/>
        <!--背景色-->
        <attr name="sb_bg_color" format="color"/>
        <!--边框颜色-->
        <attr name="sb_border_color" format="color"/>
        <!--原始标签颜色-->
        <attr name="sb_text_color" format="color"/>
        <!--选中状态背景色-->
        <attr name="sb_bg_color_check" format="color"/>
        <!--选中状态边框颜色-->
        <attr name="sb_border_color_check" format="color"/>
        <!--选中状态字体颜色-->
        <attr name="sb_text_color_check" format="color"/>
        <!--设置内容-->
        <attr name="sb_text" format="string"/>
        <!--选中时内容-->
        <attr name="sb_text_check" format="string"/>
        <!--字体大小-->
        <attr name="sb_text_size" format="dimension"/>
        <!--边框大小-->
        <attr name="sb_border_width" format="dimension"/>
        <!--边框角半径-->
        <attr name="sb_border_radius" format="dimension"/>
        <!--字体垂直空隙-->
        <attr name="sb_vertical_padding" format="dimension"/>
        <!--字体水平空隙-->
        <attr name="sb_horizontal_padding" format="dimension"/>
        <!--icon和文字间距-->
        <attr name="sb_icon_padding" format="dimension"/>
        <!--icon-->
        <attr name="sb_icon" format="reference"/>
        <!--变化模式下的icon-->
        <attr name="sb_icon_change" format="reference"/>
    </declare-styleable>




    <declare-styleable name="IjkListPreference">
        <attr name="entrySummaries" />
    </declare-styleable>
</resources>